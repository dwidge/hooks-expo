{
  "name": "@dwidge/hooks-expo",
  "version": "0.0.45",
  "description": "A set of hooks for Expo.",
  "repository": "github:dwidge/hooks-expo",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "rimraf dist && ncp assets/ dist/ && tsc -b . tsconfig.cjs.json",
    "test": "node --enable-source-maps --test --test-name-pattern"
  },
  "peerDependencies": {
    "@dwidge/country": "^0.0.6",
    "@dwidge/crud-api-react": "^0.0.47",
    "@dwidge/hooks-react": "^0.0.32",
    "@dwidge/timezone": "^0.0.6",
    "@dwidge/utils-js": "^0.0.26",
    "expo-device": "~7.1.4",
    "expo-localization": "~16.1.6",
    "expo-network": "~7.1.5",
    "expo-router": "~5.1.5",
    "react": "^19.0.0",
    "react-native": "^0.79.5",
    "react-native-promise-rejection-utils": "^0.0.1",
    "react-native-web": "~0.20.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20"
  }
}

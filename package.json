{
  "name": "@dwidge/hooks-expo",
  "version": "0.0.16",
  "description": "A set of hooks for Expo.",
  "repository": "github:dwidge/hooks-expo",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "rimraf dist && ncp assets/ dist/ && tsc -b . tsconfig.cjs.json",
    "test": "node --enable-source-maps --test --test-name-pattern"
  },
  "peerDependencies": {
    "@dwidge/country": "^0.0.4",
    "@dwidge/crud-api-react": "^0.0.20",
    "@dwidge/timezone": "^0.0.1",
    "expo-device": "^6.0.2",
    "expo-localization": "^15.0.3",
    "expo-network": "^6.0.1",
    "expo-router": "^3.5.23",
    "react": "^18.2.0",
    "react-native": "^0.74.5",
    "react-native-promise-rejection-utils": "^0.0.1",
    "react-native-web": "^0.19.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20"
  }
}
